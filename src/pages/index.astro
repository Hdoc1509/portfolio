---
import { getCollection } from "astro:content";
import ContactCTA from "../components/ContactCTA.astro";
import Grid from "../components/Grid.astro";
import Hero from "../components/Hero.astro";
import Icon from "../components/Icon.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import Skills from "../components/Skills.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { iconLinks } from "../consts";

// TODO: remove collections. just image, name, short description and icons for
// used tech stack
const projects = (await getCollection("work"))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 4);
---

<BaseLayout>
  <div class="stack gap-20 lg:gap-48">
    <main class="wrapper stack gap-8 lg:gap-20">
      <header class="hero">
        <Hero
          title="I'm HÃ©ctor Ochoa"
          tagline="A Web Front-end Developer who likes minimalist and detailed UI's."
          align="start"
        >
          <div class="socials">
            {
              iconLinks.map(({ href, icon, label }) => (
                <a href={href} class="social">
                  <span class="sr-only">{label}</span>
                  <Icon icon={icon} size="1em" />
                </a>
              ))
            }
          </div>
        </Hero>

        <!-- TODO: add photo -->
        <img
          alt="sample alt text"
          width="480"
          height="620"
          src="https://avatars.githubusercontent.com/u/72316111?v=4"
        />
      </header>

      <Skills />
    </main>

    <div class="wrapper stack gap-20 lg:gap-48">
      <section class="section">
        <header class="section-header stack gap-2 lg:gap-4">
          <h3 id="projects">My projects</h3>
        </header>

        <div class="gallery">
          <Grid variant="offset">
            {
              projects.map((project) => (
                <li>
                  <PortfolioPreview project={project} />
                </li>
              ))
            }
          </Grid>
        </div>
      </section>
    </div>

    <!-- TODO: add tech stakc that I use and another sections with "other" tools I use -->
    <ContactCTA />
  </div>
</BaseLayout>

<style>
  main {
    min-height: 100vh;
    justify-content: center;
    padding-top: 3rem;
  }

  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .socials {
    margin-top: 0.5rem;
    display: flex;
    gap: 0.5rem;
    justify-content: center;
  }
  .social {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.5rem;
    gap: 0.5rem;
    color: var(--accent-regular);
    border: 2px solid var(--accent-overlay);
    border-radius: 999rem;
    font-size: var(--text-xl);
    transition: color var(--theme-transition);
  }
  .social:hover {
    color: var(--accent-dark);
  }

  .hero img {
    aspect-ratio: 5 / 4;
    object-fit: cover;
    object-position: top;
    border-radius: 1.5rem;
  }

  @media (min-width: 50em) {
    .hero {
      display: grid;
      grid-template-columns: 6fr 4fr;
      padding-inline: 2.5rem;
      gap: 3.75rem;
    }

    .socials {
      justify-content: start;
    }
    .social {
      font-size: var(--text-2xl);
    }

    .hero img {
      aspect-ratio: 3 / 4;
      border-radius: 4.5rem;
      object-fit: cover;
    }
  }

  /* ====================================================== */

  .section {
    display: grid;
    gap: 2rem;
  }

  .section-header {
    justify-self: center;
    text-align: center;
    max-width: 50ch;
    font-size: var(--text-md);
    color: var(--gray-300);
  }

  .section-header h3 {
    font-size: var(--text-2xl);
  }

  @media (min-width: 50em) {
    .section {
      grid-template-columns: repeat(4, 1fr);
      grid-template-areas: "header header header header" "gallery gallery gallery gallery";
      gap: 5rem;
    }

    .section-header {
      grid-area: header;
      font-size: var(--text-lg);
    }

    .section-header h3 {
      font-size: var(--text-4xl);
    }

    .gallery {
      grid-area: gallery;
    }
  }
</style>
